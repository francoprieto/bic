{
  "name": "bic-electron",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare-win64": "curl -o ../target/jre.zip -XGET https://download.java.net/java/GA/jdk11/9/GPL/openjdk-11.0.2_windows-x64_bin.zip --insecure && unzip ../target/jre.zip && mkdir -p dist/win-unpacked/resources && mv jdk-11* dist/win-unpacked/resources/",
    "dist-win64": "electron-builder --win --x64"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "npx": "^10.2.2"
  },
  "devDependencies": {
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "py.org.firmador.bic",
    "productName": "Bic",
    "directories": {
      "output": "dist"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false, 
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true
    },
    "win": {
      "target": "nsis"
    }
  }
}
